@model DiscountUpdateInput
<div class="mx-auto row row-12">
    <div class="col-6">
        <form asp-controller="Admin" asp-action="DiscountUpdate" method="post">
            <input type="hidden" asp-for="@Model.Id"/>
            <div class="form-group">
                <label asp-for="@Model.UserName"></label>
                <input class="form-control" type="text" asp-for="@Model.UserName">
            </div>
            <div class="form-group">
                <label asp-for="@Model.Code"></label>
                <input class="form-control" type="text" asp-for="@Model.Code">
            </div>
            <div class="form-group">
                <label asp-for="@Model.Rate"></label>
                <input class="form-control" type="number" asp-for="@Model.Rate">
            </div>
            <button type="submit" class="btn-sm btn-danger">Submit</button>
        </form>
    </div>
</div>
