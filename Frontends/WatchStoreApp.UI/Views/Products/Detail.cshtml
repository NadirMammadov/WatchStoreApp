@model ProductsModel
<link rel="stylesheet" href="~/css/productDetail.css">
<div class="card-wrapper">
    <div class="card">
        <!-- card left -->
        <div class="product-imgs">
            <div class="img-display">
                <div class="img-showcase">
                    <img src="@Model.Picture" alt="shoe image">
                    <img src="@Model.Picture" alt="shoe image">
                    <img src="@Model.Picture" alt="shoe image">
                    <img src="@Model.Picture" alt="shoe image">
                </div>
            </div>
        </div>
        <!-- card right -->
        <div class="product-content">
            <h2 class="product-title">@Model.Name</h2>
            <p>Brend: <a href="#" class="product-link">@Model.Brend</a></p>
            

            <div class="product-price">
                <p class="new-price">Qiymət: <span>@Model.Price AZN </span></p>
            </div>
            <p style="display:inline-block;border-bottom:1px solid #256eff;">Xüsusiyyətlər</p>
            <div class="product-detail">
                
                <ul>
                    <li>Brend: <span>@Model.Brend</span></li>
                    <li>Kateqoriya: <span>@Model.Category.Name</span></li>
                    <li>Mexanizm: <span>@Model.Mechanism</span></li>
                    <li>Korpus ölçüsü: <span>@Model.CorpusSize</span></li>
                    <li>Qolbaq növü: <span>Paslanmaz Polad</span></li>
                    
                </ul>
            </div>
            <div class="purchase-info">
                <form asp-action="AddBasketItem" asp-controller="Basket" method="get">
                    <span>Sifariş sayı: <input type="number" min="0" name="Quantity" value="1"></span>
                    <input type="hidden" name="ProductId" value="@Model.Id" />
                    <button type="submit" class="btn">
                        <span style="color:white">Səbətə əlavə et <i class="fas fa-shopping-cart"></i> </span>

                    </button>
                </form>
               
            </div>
        </div>
    </div>
</div>