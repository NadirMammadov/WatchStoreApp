@model SignUpInput
<link rel="stylesheet" href="~/css/auth/signin.css"/>

<div class="sign-container">
    <div>
        <h1 class="mb-3">Qeydiyyat</h1>
        <form asp-controller="Auth" asp-action="SignUp" method="post">
            <div class="mb-3">
                <label asp-for="@Model.UserName" class="form-label"></label>
                <input type="text" asp-for="@Model.UserName" class="form-control" >
                <span asp-validation-for="@Model.UserName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Email" class="form-label"> </label>
                <input type="email" asp-for="@Model.Email" class="form-control">
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Password" class="form-label"></label>
                <input type="password" asp-for="@Model.Password" class="form-control">
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.RePassword" class="form-label"></label>
                <input type="password" asp-for="@Model.RePassword" class="form-control">
                <span asp-validation-for="@Model.RePassword" class="text-danger"></span>
            </div>
            <p>Əgər artıq qeydiyyatdan keçmisinizsə <a asp-action="SignIn" asp-controller="Auth" class="alert-link text-danger">daxil olun</a></p>
            
            <button type="submit" class="genric-btn danger circle arrow">Qeydiyyat</button>
        </form>
</div>
</div>


