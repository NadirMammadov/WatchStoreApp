                        <div class="logo">
                            <a asp-action="Index" asp-controller="Home"><img src="~/assets/img/logo/logo.png" alt=""></a>
                        </div>
                        <!-- Main-menu -->
                        <div class="main-menu d-none d-lg-block">
                            <nav>
                                <ul id="navigation">
