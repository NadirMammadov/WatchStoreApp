                                            <li><a asp-action="Index" asp-controller="Basket">Səbət</a></li>
                                        </ul>
                                    </li>
                                    <li><a asp-action="Contact" asp-controller="Home" >Bizimlə əlaqə</a></li>
                                </ul>
                            </nav>
                        </div>
                        <!-- Header Right -->
                        <div class="header-right">
                            <nav>
                            <ul id="navigation">
                                <li>
                                    <div class="nav-search search-switch">
                                        <span class="flaticon-search"></span>
                                    </div>
                                </li>
                                <li>
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        <a asp-action="Profile" asp-controller="User"><span class="flaticon-user"></span></a>
                                            <a asp-action="Logout" asp-controller="Auth"><i class="fa-solid fa-right-from-bracket logout" style=""></i></a>
                                    }
                                    else
                                    {
                                        <a asp-action="SignIn" asp-controller="Auth" ><span class="flaticon-user"></span></a>
                                    }
                                </li>
                                <li><a asp-action="Index" asp-controller="Basket"><span class="flaticon-shopping-cart"></span></a> </li>
                            </ul>
                            </nav>
                        </div>
                    </div>
                    <!-- Mobile Menu -->
                    <div class="col-12">
                        <div class="mobile_menu d-block d-lg-none"></div>
                    </div>
                </div>
            </div>
        </div>
